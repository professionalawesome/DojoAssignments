<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>time</title>
  </head>
  <body>
    <script type="text/javascript">
    var hour = 8;
    var minute = 50;
    var period = 'AM';

    function time(hour, minute, period) {
      if (minute > 30) {
        hour += 1;
        console.log("It's almost" + hour);
      } else if (minute < 30) {
        console.log("It's just after" + hour);
      }

      if (period == 'AM') {
        console.log('in the morning');
      } else if (period == 'PM') {
        console.log('PM');
      }

    }

    time(hour, minute, period);

    </script>

  </body>
</html>
